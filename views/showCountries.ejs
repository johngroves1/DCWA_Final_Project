<h1>Countries</h1>

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<button><a href="/addCountry">Add Country</a></button>
<br><br>

<table>
    <tr>
    <th>Country Code</th>
    <th>Country Name</th>
    <th>Country Details</th>
    <th>Action</th>
    </tr>
    <% countries.forEach((country) =>
    { %>
    <tr>
    <td><%=country.co_code %></td>
    <td><%=country.co_name %></td>
    <td><%=country.co_details  %></td>
    <td><a href="<%= "/editCountry/" + country.co_code %>">Update</a></td>
    <td><a href="<%= "/deleteCountry/" + country.co_code %>">Delete</a></td>
    </tr>
    <% }) %>
</table>

