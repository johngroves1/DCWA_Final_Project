<h1>Add Head of State</h1>
<% if (errors != undefined) { %>
  <ul>
      <% errors.forEach((error)=> { %>
          <li><%= error.msg %></li>
      <% })%>
  </ul>
<%} %>

<form action="/addState" method="POST">
    <label>Country Code</label>
    <input type="text" name="_id" value = "<%=_id%>">
    <br><br><label>Head of State</label>
    <input type="text" name="name" value = "<%=headOfState%>">
    <br><br>
    <input type="submit" value="Add">
  </form>


